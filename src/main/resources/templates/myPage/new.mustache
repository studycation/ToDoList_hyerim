{{>layouts/header}}

<form class="container" action="/mytodo/create" method="post">
    <div class="mb-3">
        <label class="form-label">할일 이름</label>
        <input type="text" class="form-control" name="title">
    </div>
    <div class="mb-3">
        <label class="form-label">할일 날짜</label>
        <input type="date" class="form-control" name="date">
    </div>
    <div class="mb-3">
        <label class="form-label">할일 내용</label>
        <textarea class="form-control" rows="3" name="content"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/mytodo">Back</a>
</form>

{{>layouts/footer}}