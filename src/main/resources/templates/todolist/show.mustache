{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Date</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#todo}}
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{date}}</td>
        <td>{{content}}</td>
    </tr>
    {{/todo}}
    </tbody>
</table>

<a href="/todolist/{{todo.id}}/edit" class="btn btn-primary">Edit</a>
<a href="/todolist/{{todo.id}}/delete" class="btn btn-danger">Delete</a>
<a href="/todolist">Go to Todo List</a>

{{>layouts/footer}}